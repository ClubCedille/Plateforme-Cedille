apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{deployment_prefix}}-grav
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "2"
spec:
  project: default
  destination:
    server: https://kubernetes.default.svc
    namespace: {{namespace}}
  source:
    repoURL: https://github.com/ClubCedille/Plateforme-Cedille
    path: apps/{{deployment_prefix}}/grav/prod
    targetRevision: HEAD 
  syncPolicy:
    syncOptions:
    - CreateNamespace=true
    - Replace=true